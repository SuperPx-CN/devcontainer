{
  "name": "PHP 8.4 Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "dev",
  "customizations": {
    "jetbrains": {
      "settings": {
        "com.intellij:app:BaseRefactoringSettings.rename_search_in_comments_for_file": false,
        "com.intellij:app:BaseRefactoringSettings.rename_search_for_references_for_file": false,
        "com.intellij:app:EditorSettings.soft_wrap_file_masks": "*.md; *.txt; *.rst; *.adoc",
        "com.intellij:app:HttpConfigurable.use_http_proxy": true,
        "com.intellij:app:HttpConfigurable.proxy_type_is_socks": true,
        "com.intellij:app:HttpConfigurable.proxy_host": "192.168.0.123",
        "com.intellij:app:HttpConfigurable.proxy_port": 7890,
        "com.intellij:app:HttpConfigurable.proxy_exceptions": ""
      }
    }
  }
}
